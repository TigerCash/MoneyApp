<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3710.csse.eng.auburn.edu.moneyapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/CustomActionBarTheme" > -->

        <activity
            android:name=".home.HomeActivity"
            android:label="TigerCash" >

        </activity>

        <provider
            android:name=".database.MoneyAppContentProvider"
            android:authorities="comp3710.csse.eng.auburn.edu.moneyapp.provider"
            android:multiprocess="true" >
        </provider>

        <activity
            android:name=".addTransaction.AddTransactionActivity"
            android:label="Add a Transaction" >
        </activity>
        <activity
            android:name=".allTransactions.AllTransactionsActivity"
            android:label="All Transactions" >
        </activity>
        <activity
            android:name=".buildTransaction.BuildTransactionActivity"
            android:label="Build the Transaction" >
        </activity>
        <activity
            android:name=".allCategories.AllCategoriesActivity"
            android:label="All Categories" >
        </activity>
        <activity
            android:name=".splashScreen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_splash_screen"
            android:icon="@drawable/tigercash"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
